<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT_Assets.Pages.NewAssetPage"
             Title="NewAssetPage">
    <ScrollView>
        <VerticalStackLayout Spacing="15" HorizontalOptions="Center">

            <!-- Header -->
            <Label Text="Add New Asset" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <!-- Code -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Code:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="CodeEntry" Placeholder="Enter code" HorizontalOptions="FillAndExpand" WidthRequest="150"/>
            </HorizontalStackLayout>

            <!-- Name -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Name:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="NameEntry" Placeholder="Enter name" HorizontalOptions="FillAndExpand" WidthRequest="150"/>
            </HorizontalStackLayout>

            <!-- Model -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Model:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="ModelEntry" Placeholder="Enter model" HorizontalOptions="FillAndExpand" WidthRequest="150"/>
            </HorizontalStackLayout>

            <!-- Location -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Location:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="LocationEntry" Placeholder="Enter location" HorizontalOptions="FillAndExpand" WidthRequest="150"/>
            </HorizontalStackLayout>

            <!-- Receipt Form -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Receipt Form:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="ReceiptFormEntry" Placeholder="Enter receipt form" HorizontalOptions="FillAndExpand" WidthRequest="150"/>
            </HorizontalStackLayout>

            <!-- Maintenance Date -->
            <HorizontalStackLayout Spacing="10">
                <Label Text="Maintenance Date:" WidthRequest="120" VerticalOptions="Center" />
                <DatePicker x:Name="MaintenanceDatePicker" HorizontalOptions="FillAndExpand" WidthRequest="150"/>
            </HorizontalStackLayout>

            <!--Note Editor-->
            <Editor x:Name="NoteEditor"
                    Placeholder="Write your note here..."
                    AutoSize="TextChanges"
                    HeightRequest="200" />
            
            <!-- Save Button -->
            <Button Text="Save" 
                    BackgroundColor="#33CCFF" 
                    TextColor="White" 
                    CornerRadius="12" 
                    HeightRequest="50"
                    Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>